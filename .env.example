# ========================================
# Configuration MedAlert - Template
# ========================================
# Copiez ce fichier en .env et modifiez les valeurs

# Environnement (development ou production)
NODE_ENV=development

# Domaine (localhost pour dev, votre domaine en prod)
DOMAIN=localhost

# ========================================
# Backend
# ========================================
PORT=3000
HTTPS_PORT=3443
BACKEND_HOST=backend
BACKEND_URL=https://backend:3443

# Base de données
DB_PATH=/app/database/medals.db

# ========================================
# Discord Bot
# ========================================
DISCORD_TOKEN=votre_token_discord_ici
DISCORD_CLIENT_ID=votre_client_id
DISCORD_CLIENT_SECRET=votre_client_secret
DISCORD_GUILD_ID=votre_guild_id

# ========================================
# Sécurité
# ========================================
# JWT Secret - Générez avec: openssl rand -base64 64
JWT_SECRET=changez_cette_valeur_en_production

# ========================================
# Notifications Push (VAPID)
# ========================================
# Générez vos clés avec: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=votre_cle_publique_vapid
VAPID_PRIVATE_KEY=votre_cle_privee_vapid
VAPID_SUBJECT=mailto:votre_email@example.com

# ========================================
# Ports exposés (modifiables)
# ========================================
# Ports publics pour accéder aux services
PUBLIC_HTTP_PORT=80
PUBLIC_HTTPS_PORT=443
PUBLIC_WEB_HTTP_PORT=8090
PUBLIC_WEB_HTTPS_PORT=8443
PUBLIC_NGINX_ALT_PORT=8444

# ========================================
# Conteneurs internes (ne pas modifier sauf config avancée)
# ========================================
WEB_HOST=web
WEB_INTERNAL_PORT=8443
API_URL=https://backend:3443
